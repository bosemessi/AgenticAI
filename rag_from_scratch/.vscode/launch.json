    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: 001_simple_RAG",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/001_simple_RAG.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "args": [
                "--txt_file_path", "data/cat-facts.txt",
                "--user_query", "How do cats show affection ?"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}